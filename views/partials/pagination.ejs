<div class="pagination pagination-sm justify-content-center mb-0">
  <nav aria-label="Page navigation " class="Page navigation-a">
    <%if(data.pages > 0){%>
    <ul class="pagination justify-content-center text-center  pagination-lg pg-blue">
      <!--For Previous Button-->
      <% if(data.page == 1){%>
      <li class="page-item disabled">
        <a class="page-link" href="/page/1" tabindex="-1">
          &laquo; First</a>
      </li>
      <%}else{%>
      <li class="page-item">
        <a class="page-link" href="/page/1" tabindex="-1">
          &laquo; First</a>
      </li>
      <%}%>
      <!--For Middle Button-->

      <% var i = (Number(data.page)>3 ?data.page-2:1)%> 
      <%if(i!==1){%>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <%}%> 

      <% for ( ;i <= (Number(data.page) + 2) && i <= data.pages; i++) { %> 
        <% if (i == data.page) { %>
      <li class="page-item active">
        <a class="page-link disabled"><%= i %></a>
      </li>
      <% } else { %>
      <li class="page-item">
        <a class="page-link" href="/page/<%=i%>"> <%=i %> </a>
      </li>
      <% } %> 
      <% if (i == Number(data.page) + 2 && i < data.pages) { %>
      <li class="page-item disabled"><a class="page-link">...</a></li>
      <% } %> <%}%>
      <!--For Next Button-->
      <% if(data.page == data.pages){%>
      <li class="page-item disabled">
        <a class="page-link" href="/page/<%= data.pages%>" tabindex="-1">
          Last &raquo;</a>
      </li>
      <%}else{%>
      <li class="page-item">
        <a class="page-link" href="/page/<%= data.pages%>" tabindex="-1">
          Last &raquo;</a>
      </li>
      <%}%>
    </ul>
    <% } %>
  </nav>
</div>