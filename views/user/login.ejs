<% include ./../layout/home/layoutheader%>
    <div class="row mt-5">
        <div class="col-md-8 col-sm-10 col-lg-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-4"><i class="fas fa-sign-in-alt"></i> Login</h1>
                   <form action="/user/login" method="POST" class="form-group  text-center">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control  text-center" placeholder="Enter Email"  value="<%= (typeof uemail )!= 'undefined' ? uemail :''%>" required  />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control  text-center" placeholder="Enter Password" minlength="5"   required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <p class="lead mt-4">
                    No Account? <a href="/user/register">Register</a>
                </p>
            </div>
        </div>
    </div>
    <% include ./../layout/home/layoutfooter%>