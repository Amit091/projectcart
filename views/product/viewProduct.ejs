<script>
    let srcc = $('#imgPreview ').attr('src ')
    $('.thumbImage ').mouseover(function () {
        $('#imgPreview ').attr('src ', $(this).closest('a ').attr('href '))
    })
    $('.thumbImage ').mouseleave(function () {
        $('#imgPreview ').attr('src ', srcc)
    })

    let url2 =
        "http://data.fixer.io/api/latest?access_key=d60106ce1023c25df9ed2ddac469cb05&symbols=USD,NPR,EUR"
    $.get(url2, function (data) {
        if (data.success) {
            console.log(data);
            let usd = data.rates.USD;
            let npr = data.rates.NPR;
            let eur = data.rates.EUR
            //console.log('+ ' + usd + ":" + npr + ":" + eur);
            npr = parseFloat(eur / npr).toFixed(3)
            //console.log(usd);
            let nprvar = $('#npr').text();
            $('#usd ').text((npr / eur * usd * nprvar).toFixed(2));
            $('#eur ').text((npr / eur * eur * nprvar).toFixed(2));
        }
        //console.log("error");

    });
</script>
<script>
    $('#add2CartBtn ').on('click ', () => {
        <% if (user) { %>
            var data = {
                product_id: '<%=product.id%>',
                product_name: ' <%= product.name %>',
                user_id: ' <%= user.id %>'
            };
            console.log(data);
            console.log(JSON.stringify(data));

            console.log('event logger = ' + data.product_name);
            // alert('click '); 
            $.ajax({
                type: `POST`,
                url: `/mycart/add2Cart/<%= user.id %>`,
                data: JSON.stringify(data),
                contentType: 'application/json ',
                dataType: "json",
                success: result => {
                    console.log(result);
                    //alert('myswl'); 
                    $('#add2CartBtn').append('< p > Item Added to Cart < /p>');
                    $('#add2CartBtn').remove();
                    msgI = `<p style = "color:teal" > Item Added to Cart; <br/> </p > `;
                    msgItem = `<p style = "color:teal" > Item Already Added to Cart </p>`;
                    $('#msgDiv').html(msgI)
                },
                error: error => {
                    console.log('html error');
                    console.log(error);
                    if (error.status == 400) {
                        msg = `<p style = 'color:red' > Invalid Data </p>`;
                        $('#msgDiv').html(msg);
                        setTimeout(function () {
                            $('#msgDiv').html();
                            $('#msgDiv').html(' <p> Retry! </p>');
                        }, 1000);
                    }
                    if (error.status == 400 && error.responseJSON.msg) {
                        msg = `<p style = 'color:red' > $ {error.responseJSON.msg} </p>`;
                        $('#msgDiv').html(error.responseJSON.msg);
                        setTimeout(function () {
                            $('#msgDiv').html();
                            $('#msgDiv').html(' <p> Retry! < /p>');
                        }, 1000);
                    }
                }
            });
        <%} else {%>
            console.log('no user'); 
                <%} %>
    });
</script>
