<h2 class="page-title">Product List</h2>
<br />

<a href="/admin/product/add" class="btn btn-primary">Add New Product</a>
<br />
<br />
<% if(count>0){%>
    <table class="table table-striped table-bordered table-dark alignmiddle">
        <thead>
            <tr class="header">
                <th>S.N.</th>
                <th>Product</th>
                <th>Category</th>
                <th>Price(NRs.)</th>
                <th>Image</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% var sn=1%>
                <% products.forEach(function(product){ %>
                    <tr>
                        <td>
                            <%=sn++%>
                        </td>
                        <td>
                            <%=product.name %>
                        </td>
                        <td>
                            <%=product.category %>
                        </td>
                        <td>
                            <%=parseFloat(product.price).toFixed(2) %>
                        </td>
                        <td>
                            <% if(product.image == ""){%>
                                <img id="tbImg" src="/images/1.jpg" alt="" />
                                <%} else {%>
                                    <a href="http://localhost:3200/product_images/<%=product._id%>/<%=product.image%>">
        <img
          id="tbImg"
          src="/product_images/<%=product._id%>/<%=product.image%>"
          alt=""
        />
        </a>
                                    <%}%>
                        </td>
                        <td><a href="/admin/product/edit/<%=product._id%>">Edit</a></td>
                        <td>
                            <a class="btndel" href="/admin/product/delete/<%=product._id%>">Delete</a
        >
      </td>
    </tr>
    <%})%>
  </tbody>
</table>
<%} else{%>
  <div class="align-items-center">
    <h3 class="text-center">There is no Product.</h3>
    <h4 class="text-center"><a href="/admin/product/add" style="color: teal">Add
            Product</a></h4>
                            </div>
                            <%}%>

                                <script>
                                    $(function() {
                                        $("a.btndel").on("click", function() {
                                            if (!confirm("Confirm Product Delete!")) return false;
                                        });
                                    });
                                </script>
                                <%- include ../../partials/admin/footer %>