<h2 class="page-title">Add Product</h2>
<a href="/admin/product/index" class="btn btn-primary">Back to all Products</a>

<form action="/admin/product/add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Name *</label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Product Name">
    </div>

    <div class="form-group">
        <label for="">Category</label>

    </div>
    <div class="form-group">
        <label for="">Price</label>
        <input type="text" name="price" id="price" class="form-control" placeholder="Price">
    </div>
    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" id="desc" cols="20" rows="5" class="form-control" placeholder="Description"></textarea>
    </div>
    <div class="form-control-file">
        <label for="">Image </label>
        <input type="file" name="img" id="img" class="form-control-file" placeholder="Image" value="">
        <img src="#" id="imgPreview" alt="">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
    $("#img").change(function() {
        readURL(this);
    });
</script>