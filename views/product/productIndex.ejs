<% include ./../layout\admin\adminlayoutheader%>
<link href="/css/tablescroll.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="/js/myjs/cart.css">
<!-- Breadcrumbs-->
<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/admin">Dashboard</a>
  </li>
  <li class="breadcrumb-item active">
    <U>Product</U>
  </li>
  <li class="breadcrumb-item ">
    <a href="/product/add ">Add New Product</a>
  </li>
</ol>
<div class="row mb-auto">
  <div class="col-xs-12 col-sm-12 col-md-12 col-xl-12">
    <div class="card card-body" style="align-items: center;">
      <%if(gproduct.length == 0){%>
      <p class="page-title text-center">
        There is no Product in system Add Product as Admin
      </p>
      <a
        href="/product/add"
        class="btn btn-primary text-center m-auto text-capitalize"
        >Add Product</a
      >
      <%}else{%>
      <div class="table-responsive mt-auto">
        <h2 class="card-header page-title text-center ">Product List</h2>
        <table class="table table-striped table-sm text-center">
          <thead>
            <tr class="header ">
              <th>Id</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th>Date</th>
              <th>Image</th>
              <th>Option</th>
            </tr>
          </thead>
          <tbody>
            <%gproduct.forEach(prod => {%>
            <tr>
              <td>
                <%=prod.id%>
              </td>
              <td>
                <%=prod.name%>
              </td>
              <td>
                <%=prod.category%>
              </td>
              <td>
                <%=prod.price%>
              </td>
              <td>
                <%=prod.fdoa%>
              </td>
              <td>
                <img
                style="cursor:zoom-in;"
                class="zoom"
                  src="/product_images/<%=prod.id%>/default.jpg"
                  height="50"
                  alt="<%=prod.name%>"
                />
              </td>
              <td>                
                  <a class="btn btn-primary" href="/product/<%=prod.id%>">
                    <i class="fa fa-eye"></i>
                    </a>
                <a class="btn btn-primary" href="/product/edit/<%=prod.id%>">
                  <i class="fa fa-pen-nib"></i>
                </a>
                <a
                  class="btn btn-danger btndel"
                  href="/product/delete/<%=prod.id%>"
                  ><i class="fa fa-trash"></i
                ></a>
              </td>
            </tr>
            <%});%>
          </tbody>
        </table>
        <%}%>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    $("a.btndel ").on("click ", function() {
      if (!confirm("Confirm Product Delete! ")) return false;
    });
  });
</script>

<% include ./../layout\admin\adminlayoutfooter%>
