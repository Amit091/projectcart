<div class="card mb-auto">
    <div class="row no-gutters">
        <div class="col-md-6">
            <div class="col-md-auto">
                <img src='/product_images/<%=item.product_id%>/default.jpg' class="card-img" alt="<%=item.pname%>">
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <input type="hidden" value="<%=item.cartId%>" id="item-id">
                <h5 class="card-title">Item Detail</h5>
                <p class="card-text" id="productname">
                    <%=item.pname%>
                </p>
                <p class="card-text">
                    <%=item.description%>
                </p>
                <p class="card-text">
                    <%=item.cate%>
                </p>
                <p class="card-text">
                    <%=item.id%>P
                    <%=item.product_id%>C</p>
                <p class="card-text" id="itemQuant">
                    <%=quan %>
                </p>
                <p class="card-text">
                    Rs.
                    <%= item.price * quan %>
                </p>
            </div>
        </div>
        <div class="row  text-center">
            <div class="card-footer">
                <p class="card-text "><small class="text-muted">Added to cart on <%=item.date%></small></p>
            </div>
        </div>
    </div>
</div>