            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12 m-auto">

                <h6 class="card-title text-center ">Cart Detail</h6>
                <div class="card" style=" margin :15px">
                    <div class="card-body  table-responsive ml-auto">

                        <%if(cartitems.length != 0){%>
                            <table class="table-xs table table-bordered text-center table-responsive" id="mainTable">
                                <caption>List of item incart</caption>
                                <tr>
                                    <th>Cart no.</th>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Image</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Date</th>
                                    <th>status</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <%n =1%>
                                        <%cartitems.forEach(item => {%>
                                            <tr id="item_<%=item.cartId%>" class="newItem" style="width: 100%;" data-cart="<%=item.cartId%>" data-whole="<%item%>" data-userid="<%=item.user_id%>" data-pprice="<%=item.price%>">
                                                <td>
                                                    <%=item.cartId%>
                                                </td>
                                                <td>
                                                    <%=item.pname%>
                                                </td>
                                                <td>
                                                    <%=item.cate%>
                                                </td>
                                                <td>
                                                    <img class="zoom" width="50px" height="50px" src="/product_images/<%=item.product_id%>/default.jpg">
                                                </td>
                                                <td style="width: 5%;">
                                                    <input class="product_item form-control-sm text-center" type="number" name="" value="<% (item.product_quantity)!=0?item.product_quantity:0%>" />
                                                </td>
                                                <td class="itemtotal">0</td>
                                                <td>
                                                    <%=item.date%>
                                                </td>
                                                <td>
                                                    <%=item.status%>
                                                </td>
                                                <td>
                                                    <button disabled class="btn btn-primary btnPurchase">Purchase</button>
                                                    <button class="btn btn-danger btnRemove">Remove</button>
                                                </td>
                                            </tr>
                                            <%n++})%>
                                </tbody>
                            </table>
                            <%}else{%>
                                <div class="text-center text-black-50">
                                    <h2>Add Some Item to cart. <a href='/'><i class="fa fa-shopping-basket"></i></a></h2>
                                </div>

                                <%}%>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="itemPurchaseModal" tabindex="-1" role="dialog" aria-labelledby="itemPurchaseModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
