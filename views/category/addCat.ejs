<div class="row mt-5">
    <div class="col-md-8 m-auto">
        <div class="card card-body">
            <h2 class="page-title">
                Add Category</h2>
            <br>
            <a href="/admin/category/index" class="btn btn-primary">Back to List</a>
            <br>
            <form action="/admin/category/add" method="post">
                <div class="form-group">
                    <label for="">Title *</label>
                    <input type="text" name="header" id="header" class="form-control" placeholder="Page Head">
                </div>
                <div class="form-group">
                    <label for="">Slug</label>
                    <input type="text" name="slug" id="slug" class="form-control" placeholder="Slug">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" id="description" class="form-control" placeholder="Description" rows="10" cols="80"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <br>
        </div>
    </div>
</div>
<script src="/vendor/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('description');
</script>