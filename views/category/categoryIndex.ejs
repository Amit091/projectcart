<% include ./../layout\admin\adminlayoutheader%>
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/admin">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Category</li>

    </ol>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-xl-6" style="padding-bottom: 5px">
            <div class="card card-body ">
                <a class="card-header" style="float:right;" href="/category/add">New Category</a>
                <!-- <h2 class="page-title ">Category List <a href=" /category " class="btn btn-primary col-md-4">Add New Product</a></h2> -->
                <%if(categories.length == 0){%>
                    <p class="page-title text-center">There is no Category in system Add Product as Admin</p>
                    <a href="/category/add" class="btn btn-primary text-center m-auto text-capitalize">Add Category</a>
                    <%}else{%>
                        <table class="table table-striped  table-borderless" id="mainTable">
                            <thead>
                                <th>id</th>
                                <th>Category</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </thead>
                            <tbody>
                                <% categories.forEach(category => {%>
                                    <tr>
                                        <td class="category_id" data-value="<%=category.id%>">
                                            <%=category.id%>
                                        </td>
                                        <td class="category_name" data-value="<%=category.name%>">
                                            <%=category.name%>
                                        </td>
                                        <td>
                                            <button class="btn btn-primary editBtn">
                                    <i class="fa fa-pen "></i>
                                </button>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger deleteBtn"><b>X</b></button>
                                        </td>
                                        <input type="hidden" value="<%=category.description%>" class="category_description">
                                    </tr>
                                    <% });%>
                            </tbody>
                        </table>
                        <%}%>
            </div>
        </div>
        <div class="col-12 col-sm-12 col-md-12 col-xl-6 disabled">
            <div class="card">
                <div class="card-header">
                    <div style="display: inline">
                        <h2 class="d-inline">Category Detail
                        </h2>
                        <h3 class="d-inline" style="float: right" id="item_id"></h3>
                    </div>
                </div>
                <div class="card-body">
                    <form id="detailForm" action="/category/edit/" method="POST">
                        <div class="form-group">
                            <label>Name*</label>
                            <input type="text" name="name" id="name" class="form-control" value="" required>
                        </div>

                        <div class="form-group">
                            <label>Description*</label>
                            <textarea name="description" id="description" class="form-control" required></textarea>
                        </div>
                        <button disabled id="btnSubmit" class="btn  m-auto text-center align-center">Submit</a>
                    </form>
                    <br>
                </div>
            </div>
        </div>
    </div>

